<div class="regional-content-wrapper">
  <div class="row">
    <div class="regional-content-title-wrapper col-12 col-lg-4">
      <h2>{{ content.field_title }}</h2>
    </div>
    <div class="regional-content-information col-12 col-lg-8">
      {{ content.field_texte }}
      <span class="regional-parag-link">
        <a href="{{ content.field_link['#items'][0].url }}" target="_blank">
		{% if currentLanguage == 'ar' %}
		{{ '...أكثر'|t }}
		{% endif %}
		{% if currentLanguage == 'fr' %}
		{{ 'Plus...'|t }}
		{% endif %}
		{% if currentLanguage == 'en' %}
		{{ 'More...'|t }}
		{% endif %}
		</a></span>
    </div>
  </div>
</div>
